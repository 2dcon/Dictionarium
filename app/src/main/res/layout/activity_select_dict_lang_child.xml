<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/select_dictionary_child_height"
        android:layout_toStartOf="@+id/frame_delete"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/padding_left_dictionary_name">

        <TextView
            android:id="@+id/dictionary_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/select_dictionary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_delete"
        android:layout_width="@dimen/select_dictionary_child_height"
        android:layout_height="@dimen/select_dictionary_child_height"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX=".8"
            android:scaleY=".8"
            android:src="@drawable/cross" />

        <Button
            android:id="@+id/delete_dictionary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent" />
    </FrameLayout>

</RelativeLayout>